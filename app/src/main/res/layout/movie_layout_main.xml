<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_movie_layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <TextView
            android:id="@+id/tv_date_title"
            android:layout_width="@dimen/match_constraint_dimen"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_20dp"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:fontFamily="@font/font_regular"
            android:letterSpacing="0.01"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/text_size_14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="28th May 2022" />

        <TextView
            android:id="@+id/tv_day_title"
            android:layout_width="@dimen/match_constraint_dimen"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_bold"
            android:letterSpacing="0.01"
            android:layout_marginTop="3dp"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/text_size_20sp"
            app:layout_constraintEnd_toEndOf="@id/tv_date_title"
            app:layout_constraintStart_toStartOf="@id/tv_date_title"
            app:layout_constraintTop_toBottomOf="@id/tv_date_title"
            tools:text="yayy! it's Saturday" />

        <ImageView
            android:id="@+id/iv_no_movie_icon"
            android:layout_width="@dimen/match_constraint_dimen"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_80dp"
            android:src="@drawable/ic_movie_placeholder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_day_title"
            app:layout_constraintVertical_bias="0.136" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_start_game"
            style="@style/PrimaryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:padding="@dimen/padding_8dp"
            android:textSize="@dimen/text_size_20sp"
            android:text="@string/lets_play_label"
            android:drawableEnd="@drawable/ic_next"
            app:layout_constraintTop_toBottomOf="@id/iv_no_movie_icon"
            app:layout_constraintStart_toStartOf="@id/iv_no_movie_icon"
            app:layout_constraintEnd_toEndOf="@id/iv_no_movie_icon"
            />

        <include
            android:id="@+id/layoutMovieCard"
            layout="@layout/movie_display_card_layout"
            android:layout_width="0dp"
            android:layout_height="@dimen/match_constraint_dimen"
            android:layout_marginLeft="@dimen/margin_28dp"
            android:layout_marginTop="@dimen/margin_40dp"
            android:layout_marginRight="@dimen/margin_28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_day_title"
            app:layout_constraintBottom_toTopOf="@id/btnGetMovie"
            app:layout_constraintVertical_bias="0.464"
            tools:visibility="visible" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGetMovie"
            style="@style/PrimaryButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/get_movie_button_label"
            android:padding="@dimen/padding_8dp"
            android:textSize="@dimen/text_size_20sp"
            android:textAllCaps="false"
            android:layout_margin="@dimen/margin_36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutMovieCard"
            app:layout_constraintStart_toStartOf="@id/layoutMovieCard"
            app:layout_constraintEnd_toEndOf="@id/layoutMovieCard" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/movie_suggestion_group_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:constraint_referenced_ids="btnGetMovie, layoutMovieCard"
            tools:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>